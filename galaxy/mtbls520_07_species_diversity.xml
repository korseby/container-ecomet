<?xml version='1.0' encoding='UTF-8'?>
<!--Proposed Tool Section: [Eco-Metabolomics]-->
<tool id="mtbls520_07_species_diversity" name="mtbls520_07_species_diversity" version="0.5">
  <requirements>
    <container type="docker">korseby/mtbls520</container>
  </requirements>
  <description>Calculate various species diversity indices from the MTBLS520 study.</description>
  <stdio>
    <regex match="" source="stderr" level="warning" description="R messages" />
    <exit_code range="1:" level="fatal" description="Tool error" />
  </stdio>
  <command><![CDATA[
mtbls520_07_species_diversity.r $infile1 $outfile1 $outfile2;
  ]]>
  </command>
  <inputs>
    <param name="infile1" type="data" format="rdata" optional="False" label="Input Rdata file." />
  </inputs>
  <outputs>
    <data name="outfile1" type="data" format="txt" label="Species diversity indices CSV file" />
    <data name="outfile2" type="data" format="rdata" label="Rdata file" />
  </outputs>
  <help><![CDATA[
This is the MTBLS520 study.
The study will be published soon. This code is work-in-progress. Do not redistribute unless study published.
Copyright (C) 2017 Kristian Peters - IPB Halle
----
More updates soon
  ]]></help>
</tool>

